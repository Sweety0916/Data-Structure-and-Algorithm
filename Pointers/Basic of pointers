   cout<<"************"<<endl;
   cout<<i<<endl;
   cout<<p<<endl;
   cout<<*p<<endl;
   int k=*p;
   k++;
    cout<<"************"<<endl;
   cout<<i<<endl;
   cout<<k<<endl;
   cout<<*p<<endl;
   p++;
   cout<<"************"<<endl;
   cout<<p<<endl;
   p=p+2;
   cout<<"************"<<endl;
   cout<<p<<endl;
    p=p-2;
