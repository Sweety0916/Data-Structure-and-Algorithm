#include <iostream>

using namespace std;

string reverse_string(string str){
    int s=0;
    int e=str.size()-1;
    
for(int i=0;i<e;i++){
        char temp=str[s];
        str[s]=str[e];
        str[e]=temp;
        s++;
        e--;
    }
    return str;
}

int main()
{
string str="i love coding";
cout<<reverse_string(str);

    return 0;
}

//  for loop run from end

#include <iostream>

using namespace std;

string reverse_string(string str){
    int n=str.size()-1;
    for(int i=n;i>=0;i--){
        cout<<str[i];
    }
    return str;
}

int main()
{
    string str=" sweety";
    cout<<reverse_string(str);

    return 0;
}

// swap using
#include <iostream>

using namespace std;

string reverse_string(string str){
    int n=str.size();
    for(int i=0;i<n/2;i++){
        
        swap(str[i],str[n-i-1]);
       
       
        
    }
    return str;
}

int main()
{
    string str="i love coding";
    cout<<reverse_string(str);

    return 0;
}

// using stl

#include <iostream>
#include<bits/stdc++.h>

using namespace std;

string reverse_string(string str){
   
    
    reverse(str.begin(),str.end());
       
    return str;
}

int main()
{
    string str="i love coding";
    cout<<reverse_string(str);

    return 0;
}
